<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saelmhurst.myapplication.CaptureActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textAllCaps="true"
            android:textColor="@color/orange"
            android:layout_width="100dp"
            android:layout_height="42.5dp"
            android:textSize="37.5sp"
            android:text="Capture"
            android:id="@+id/mode"
            android:layout_column="1"
            android:layout_span="4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ToggleButton
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:textOff="Did Not Challenge"
            android:textOn="Challenged"
            android:id="@+id/Challenge"
            android:layout_column="0" />

        <ToggleButton
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:textOff="Did Not Climb"
            android:textOn="Climbed"
            android:id="@+id/Climb"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="15sp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Total Alliance Score"
            android:id="@+id/TotalScoreText"
            android:layout_column="0" />

        <EditText
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/TotalScoreEdit"
            android:hint="Allied Score"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Penalties"
            android:textSize="30sp"
            android:id="@+id/PenaltyText"
            android:layout_column="0" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="15sp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/DefensiveText"
            android:layout_column="0"
            android:text="Defensive" />

        <EditText
            android:textSize="15sp"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/DefensivePenalty"
            android:hint="Defensive Penalty Points"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Secret Passage"
            android:id="@+id/PassageText"
            android:layout_column="0" />

        <EditText
            android:inputType="number"
            android:textSize="15sp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/PassagePenalty"
            android:layout_column="1"
            android:hint="Passage Penalty Points"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="15sp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Pinning"
            android:id="@+id/PinningText"
            android:layout_column="0" />

        <EditText
            android:inputType="number"
            android:textSize="15sp"
            android:hint="Pinning Penalty Points"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/PinningPenalty"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="15sp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Other"
            android:id="@+id/OtherText"
            android:layout_column="0" />

        <EditText
            android:inputType="number"
            android:textSize="15sp"
            android:hint="Other Penalty Points"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/OtherPenalty"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Submit"
            android:id="@+id/submit"
            android:layout_column="1"
            android:onClick="onSubmit"/>
    </TableRow>

</TableLayout>
